<div class="container">

  <div class="text-center my-3">
    <%= form_tag meals_path, method: :get do %>
      <%= text_field_tag :query, params[:query] %>
      <%= submit_tag "search", class: "btn btn-secondary" %>
    <% end %>
  </div>
  
  <div class="row text-center justify-content-center my-3">
    <div class="col-8">
     <h2 class="index-quote">My food diary!üçë</h1>
    </div>
  </div>

  <div class="timeline mb-5">
    <div class="timeline-header">Your timeline</div>
    <% @meals.reverse.each do |meal| %>
      <p>    
        <%= "Food consumed at #{meal.created_at}" %>
        <%= link_to "Check it out", "/meals/#{meal.id}", class: "btn text-center" %>
      </p>    
    <% end %>
    <div class="timeline-footer">See you next time!</div>
    <br>
    <br>
  </div>

</div>

