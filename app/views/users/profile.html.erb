<div class='container'>
  <%= cl_image_tag current_user.photo.key,class:"profile_image", width: 240, height: 400, crop: :fill if current_user.photo.attached? %>
  <h1 class="text-center my-5 section-user"><%= current_user.name%></h1>
  <div>
    <h2 class="text-center section-head">Last Movement</h2>
    <% if @movement.nil? %>
      <h3 class="my-5 section-content">No movement recorded - go out there and do some shit!</h3>
    <%else%>
      <div class="movement-report">
        <h5 class="font-weight-bold">Everything happened at: <br> <%= "#{@movement.created_at}" %></h2>

        <p class="my-4">It seems you were feeling <%= "#{@movement.feeling}" %> about it.</p>

        <p class="my-4"> <%= "#{@movement.effort}" %>, and the time it took was around <%= "#{@movement.duration}" %>.</p>

        <p class="my-4"> It's color was <%= "#{@movement.color}" %> and smelled like it was <%= "#{@movement.smell}" %>.</p>


        <p class="my-4"> In the Bristol stool scale it was a <%= "#{@movement.shape}" %>.</p>

        <div class="my-4">
          <p class="font-weight-bold"><%= image_tag @movement.img_url, class: "dashboards_movement_img" %> HINT: . . .</p>
        </div>

        <p class="my-4">Your comments: <br> <%= "#{@movement.comments}" %></p>

        <%= link_to "Return", movements_path, class: "btn-block btn" %>

      </div>
    <%end%>
  </div>

  <div>
    <h2 class="text-center section-head">Last Meal</h2>
    <% if @meal.nil? %>
      <h3 class="my-5 section-content">No meal recorded - how come you ain't hungry?</h3>
      <%else%>
        <ul class="ul-style">
          <li>Description: <%=@meal.description%></li>
        </ul>
    <%end%>
  </div>

  <div class="timeline mb-5">
  <div class="timeline-header">Your timeline</div>
  <% @movements.each do |movement| %>
    <p>
      <%= "Doo Doo at #{movement.created_at}" %>
      <%= link_to "Check it out", "/movements/#{movement.id}", class: "btn text-center" %>

  <% @timeline.reverse.each do |timeline| %>
    <% if timeline.in?(@meals) %>
      <p>
        <%= "Food consumed at #{timeline.created_at}" %>
        <%= link_to "Check it out", "/meals/#{@meal.id}", class: "btn text-center" %>
      </p>
    <% else %>
      <p>
      <%= "Doo doo done at #{timeline.created_at}" %>
      <%= link_to "Check it out", "/movements/#{@movement.id}", class: "btn text-center" %>
    </p>
  <% end %>
  <% end %>
  <% @timeline.sort_by &:sortable_date %>
  <div class="timeline-footer">See you next time!</div>
  <br>
  <br>
</div>


</div>


